@model MoviesWebApp.Models.ViewModels.EditCategoryRequest
@{
}

<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>Edit Category - Admin Functionality</h1>
    </div>
</div>


<div class="container py-5">
    @if (Model != null)
    {

        <form method="post">
            <div class="mb-3">
                <label class="form-label">Id</label>
                <input type="text" id="id" class="form-control" asp-for="Id" readonly />
            </div>
            <div class="mb-3">
                <label class="form-label">Name</label>
                <input type="text" id="name" class="form-control" asp-for="Name" />
            </div>
            <div class="mb-3">
                <label class="form-label">Deleted</label>
                <input type="text" class="form-control" asp-for="IsDeleted" readonly />
            </div>
            <div class="mb-3">
                <div class="d-flex">
                    <button type="submit" class="btn btn-dark">Update</button>
                    <button class="btn btn-danger ms-2" type="submit" 
                    asp-area="" 
                    asp-controller="AdminCategory"
                    asp-action="Delete">
                        Delete</button>
                </div>
            </div>
        </form>
    }
    else
    {
        <p>Category not found!</p>
    }
</div>