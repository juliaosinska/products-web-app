@model ProductsWebApp.Models.ViewModels.EditProductRequest

@{
}

<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>Edit the Product - Admin functionality</h1>
    </div>
</div>

<div class="container py-5">
    @if (Model != null)
    {
        <form method="post">
        <div class="mb-3">
            <label class="form-label">Id</label>
            <input type="text" id="id" class="form-control" asp-for="Id" readonly />
        </div>

        <div class="mb-3">
            <label class="form-label">Title</label>
            <input type="text" class="form-control" id="title" asp-for="Title" />
        </div>

        <div class="mb-3">
            <label class="form-label">Description</label>
            <input type="text" class="form-control" id="description" asp-for="Description" />
        </div>

        <div class="mb-3">
            <label class="form-label">Deleted</label>
            <input type="text" class="form-control" asp-for="IsDeleted" readonly />
        </div>

        <div class="mb-3">
            <label class="form-label">Creation Date</label>
            <input type="date" class="form-control" asp-for="CreationDate" readonly />
        </div>

        <div class="mb-3">
            <label class="form-label">Creator User Id</label>
            <input type="text" class="form-control" asp-for="CreatorUserId" readonly />
        </div>

        <div class="mb-3">
            <label class="form-label">Image URL</label>
            <input type="text" class="form-control" id="imageUrl" asp-for="ImageUrl" />
        </div>

        <div class="mb-3">
            <label class="form-label">Categories</label>
            <select class="form-select" asp-items="@Model.Categories"
                    asp-for="SelectedCategories">
            </select>

        </div>

        <div class="mb-3 d-flex">
            <button type="submit" class="btn btn-dark">Update</button>
            
            <button type="submit" class="btn btn-danger ms-2"
                    asp-area=""
                    asp-controller="AdminProduct"
                    asp-action="Delete">
                Delete
            </button>
        </div>
        </form>

    }

    else
    {
        <p>No product found!</p>
    }
</div>